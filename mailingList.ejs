<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mailing List</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <style>
      body, html {
          margin: 0;
          padding: 0;
          width: 100%;
          height: 100%;
      }

      /* Transparent Navigation Bar */
      .nav-bar {
          position: sticky;
          top: 0;
          z-index: 10;
          background-color: black;
          color: white;
          display: flex;
          justify-content: flex-end;
          align-items: center;
          padding: 10px 20px;
          height: 50px;
      }

      .nav-bar a {
          color: white;
          text-decoration: none;
          font-size: 14px;
          margin-left: 20px;
          font-weight: bold;
          text-transform: uppercase;
          transition: color 0.3s ease;
      }

      .nav-bar a:hover {
          color: lightgreen;
      }

      /* Form Styling */
      .form-container {
          max-width: 800px;
          margin: 20px auto;
          padding: 20px;
          background-color: #f9f9f9;
          border-radius: 8px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .form-container label {
          font-weight: bold;
          margin-top: 10px;
      }

      .form-container .btn {
          background-color: lightgreen;
          color: black;
          border: none;
          font-weight: bold;
          transition: background-color 0.3s ease, transform 0.2s ease;
      }

      .form-container .btn:hover {
          background-color: #89e589;
          transform: scale(1.05);
      }

      .alert button {
          background-color: lightgreen;
          border: none;
          color: black;
          font-weight: bold;
          transition: background-color 0.3s ease;
      }

      .alert button:hover {
          background-color: #89e589;
      }

      /* Footer */
      footer {
          background-color: #343a40;
          color: white;
      }

      footer a {
          color: lightgray;
          text-decoration: none;
      }

      footer a:hover {
          color: white;
      }
  </style>
</head>
<body>
  <!-- Transparent Navigation Bar -->
  <div class="nav-bar">
    <a href="/">Home</a>
    <a href="/newvolunteer">Volunteer</a>
    <a href="/viewEventRequests">View Event Requests</a>
  </div>

  <!-- Main Content -->
  <div class="container form-container">
    <% if (alertMessage) { %>
      <div class="alert <%= alertMessage.includes('success') ? 'alert-success' : 'alert-danger' %>">
        <%= alertMessage %>
        <br>
        <button class="btn mt-2" onclick="window.location.href='/'">Close</button>
      </div>
    <% } %>

    <h2 class="text-center mb-4">Send Email to Volunteers</h2>
    <form action="/sendMail" method="POST">
      <div class="mb-3">
        <label for="subject">Subject</label>
        <input type="text" class="form-control" id="subject" name="subject" required>
      </div>
      <div class="mb-3">
        <label for="message">Message</label>
        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
      </div>
      <button type="submit" class="btn w-100">Send Email</button>
    </form>

    <hr>
    <h3 class="text-center mt-4">Volunteer Emails</h3>
    <ul>
      <% volunteers.forEach(volunteer => { %>
        <li><%= volunteer.VolEmail %></li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
