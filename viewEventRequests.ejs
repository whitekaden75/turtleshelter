<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Event Requests</title>
    <style>
        /* Navigation Bar */
        .nav-bar {
            background-color: black;
            color: white;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 10px 20px;
            height: 50px;
        }

        .nav-bar a {
            color: white;
            text-decoration: none;
            font-size: 14px;
            margin-left: 20px;
            font-weight: bold;
            text-transform: uppercase;
            transition: color 0.3s ease;
        }

        .nav-bar a:hover {
            color: gray;
        }

        body {
            font-family: sans-serif;
            background-color: white;
            color: black;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: black;
        }

        /* Modern Table Styling */
        table {
            width: 100%;
            max-width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            font-size: 16px;
            text-align: left;
            background-color: #f9f9f9; /* Light gray table background */
            border-radius: 12px; /* Rounded corners */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Light shadow for modern look */
        }

        th, td {
            padding: 14px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f1f1f1; /* Neutral gray background for the header */
            color: black;
            font-weight: bold;
            text-transform: uppercase; /* Capitalized header text */
            border-top-left-radius: 12px;
            border-top-right-radius: 12px; /* Rounded top corners */
        }

        td {
            background-color: white; /* White background for the table body cells */
        }

        tr:nth-child(even) {
            background-color: #f3f3f3;
        }

        tr:hover {
            background-color: #e1e1e1;
        }

        /* Button Styling */
        button {
            padding: 8px 14px;
            background-color: #333; /* Dark gray background */
            color: white;
            border: 1px solid #ddd;
            border-radius: 6px; /* Rounded edges */
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease, border-color 0.3s ease;
            margin: 5px;
        }

        button:hover {
            background-color: #555; /* Lighter gray on hover */
            border-color: #888;
        }

        button:active {
            background-color: #444; /* Even darker on active click */
        }

        button:focus {
            outline: none; /* Remove the default focus outline */
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); /* Add a subtle focus shadow */
        }

        /* Back to Home Button Styling */
        .back-to-home-btn {
            text-align: right;
            margin-top: 20px;
            margin-right: 30px; /* Padding from the right */
            margin-bottom: 30px; /* Padding from the bottom */
        }

        .back-to-home-btn a {
            display: inline-block;
            padding: 12px 20px;
            background-color: #333; /* Dark gray background to match other buttons */
            color: white;
            text-decoration: none;
            border-radius: 6px;
            font-size: 16px;
            text-transform: uppercase;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .back-to-home-btn a:hover {
            background-color: #555; /* Slightly lighter gray on hover */
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            table {
                font-size: 14px;
                max-width: 100%;
            }

            th, td {
                padding: 10px;
            }
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <div class="nav-bar">
      <a href="/">Home</a>
      <a href="/eventRequest">Request Event</a>
      <a href="/newvolunteer">Volunteer</a>
    </div>

    <main>
        <h1>Event Requests</h1>

        <table>
            <thead>
                <tr>
                    <th>Proposed Dates</th>
                    <th>Event Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Start Time</th>
                    <th>Duration</th>
                    <th>Contact Name</th>
                    <th>Event Type</th>
                    <th>Jen's Story</th>
                    <th>Participants</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                <tr>
                    <td>
                        <strong>Date 1:</strong> <%= event.EventDate1 %><br>
                        <strong>Date 2:</strong> <%= event.EventDate2 %><br>
                        <strong>Date 3:</strong> <%= event.EventDate3 %><br>
                    </td>
                    <td><%= event.EventAddress %></td>
                    <td><%= event.EventCity %></td>
                    <td><%= event.EventState %></td>
                    <td><%= event.StartTime %></td>
                    <td><%= event.Duration %></td>
                    <td>
                        <%= event.ContactFirstName %> <%= event.ContactLastName %>
                    </td>
                    <td><%= event.EventType %></td>
                    <td><%= event.JenStory ? 'Yes' : 'No' %></td>
                    <td><%= event.Participants %></td>
                    <td>Pending</td>
                    <td>
                        <form action="/reviewRequest/<%= event.EventID %>" method="GET" style="display: inline;">
                            <button type="submit">Review</button>
                        </form>
                        <br>
                        <form action="/rejectRequest/<%= event.EventID %>" method="POST" style="display: inline;">
                            <button type="submit">Reject</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="back-to-home-btn">
            <a href="/">Back to Home</a>
        </div>
    </main>

</body>
</html>
