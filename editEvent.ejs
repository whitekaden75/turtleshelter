<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event</title>
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <style>
        .back-to-home-btn {
            position: absolute;
            right: 10px;
            top: 690px; /* Adjust the top margin as needed */
            padding: 10px;
        }
    </style>
    <!-- Header Section -->
    <header>
        <div class="left-align">TURTLE SHELTER <br />PROJECT</div>
        <nav class="right-align">
            <a href="/">HOME</a>
            <a href="/viewevents">EVENTS</a>
        </nav>
    </header>

    <h1 style="text-align: center;" class="page-title">Edit Event</h1>

    <!-- Form to edit event details -->
    <div class="middlepage">
        <form action="/editEvent/<%= event.EventID %>" method="POST">
            <label for="EventDate">Event Date:</label>
            <input type="date" name="EventDate" value="<%= event.EventDate %>" required><br>
            
            <label for="EventAddress">Event Address:</label>
            <input type="text" name="EventAddress" value="<%= event.EventAddress %>" required><br>
            
            <label for="EventCity">Event City:</label>
            <input type="text" name="EventCity" value="<%= event.EventCity %>" required><br>
            
            <label for="EventState">Event State:</label>
            <input type="text" name="EventState" value="<%= event.EventState %>" required><br>
            
            <label for="StartTime">Start Time:</label>
            <input type="time" name="StartTime" value="<%= event.StartTime %>" required><br>
            
            <label for="Duration">Duration:</label>
            <input type="text" name="Duration" value="<%= event.Duration %>" required><br>
            
            <label for="JenStory">Jen's Story:</label>
            <input type="text" name="JenStory" value="<%= event.JenStory %>" required><br>
            
            <label for="ExpectedParticipants">Expected Participants:</label>
            <input type="number" name="ExpectedParticipants" value="<%= event.ExpectedParticipants %>" required><br>
            
            <label for="TmNeeded">Team Members Needed:</label>
            <input type="number" name="TmNeeded" value="<%= event.TmNeeded %>" required><br>
            
            <label for="ActualParticipants">Actual Participants:</label>
            <input type="number" name="ActualParticipants" value="<%= event.ActualParticipants %>" required><br>

            <label for="Pockets">Pockets:</label>
            <input type="number" name="Pockets" value="<%= event.Pockets %>" required><br>

            <label for="Vests">Vests:</label>
            <input type="number" name="Vests" value="<%= event.Vests %>" required><br>

            <label for="Collars">Collars:</label>
            <input type="number" name="Collars" value="<%= event.Collars %>" required><br>

            <label for="Envelopes">Envelopes:</label>
            <input type="number" name="Envelopes" value="<%= event.Envelopes %>" required><br>

            <label for="TotalProducts">Total Products:</label>
            <input type="number" name="TotalProducts" value="<%= event.TotalProducts %>" required><br>

            <label for="TmSignedUp">Team Members Signed Up:</label>
            <input type="number" name="TmSignedUp" value="<%= event.TmSignedUp %>" required><br>

            <label for="EventStatus">Event Status:</label>
            <select id="EventStatus" name="EventStatus" required>
            <% statuses.forEach(status => { %>
                <option value="<%= status.StatusID %>" 
                <%= event.StatusID === status.StatusID ? 'selected' : '' %>>
                <%= status.EventStatus %>
                </option>
            <% }); %>
            </select>
            <!-- Add additional fields if necessary -->
            
            <button type="submit">Save Changes</button>
        </form>
        

        <!-- Back to events button -->
        <div class="back-to-home-btn" style="text-align: right; padding: 50px;">
            <a href="/viewAllEvents" class="btn">Cancel</a>
        </div>
    </div>
</body>
</html>
