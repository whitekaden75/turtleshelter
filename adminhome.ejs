<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        let security = `<%= security %>`;
        let sudoSecurity = `<%= sudoSecurity %>`;
        console.log("normal", security);
        console.log("sudo", sudoSecurity);

        // Check user access level and display corresponding section
        if (security === "false" && sudoSecurity === "false") {
          console.log("Invalid user detected");
          document.getElementById("badUser").style.display = "block";
        } else if (security === "true") {
          console.log("Normal user detected");
          document.getElementById("normalUser").style.display = "block";
        } else if (sudoSecurity === "true") {
          console.log("Sudo user detected");
          document.getElementById("sudoUser").style.display = "block";
        }
      });
    </script>
  </head>
  <body>
    <header>
      <div class="left-align">TURTLE SHELTER <br />PROJECT</div>
    </header>

    <!-- Invalid User Section -->
    <div id="badUser" style="display: none">
      <div class="login-container">
        <form action="/login" method="get" class="login-form">
          <h2>Username or Password Incorrect</h2>
          <button type="submit" class="btn">Try Again</button>
        </form>
      </div>
    </div>

    <!-- Normal User Section -->
    <div id="normalUser" style="display: none">
      <main>
        <h1>Hello Admin!</h1>
        <div class="menu">
          <div>
            <button class="btn" onclick="window.location.href='/page1'">
              Volunteers
            </button>
          </div>
          <hr />
          <div>
            <h2>Events</h2>
            <button class="btn" onclick="window.location.href='/page1'">
              Events Statistics
            </button>
            <button class="btn" onclick="window.location.href='/page1'">
              Event Calendar
            </button>
          </div>
        </div>
      </main>
    </div>

    <!-- Sudo User Section -->
    <div id="sudoUser" style="display: none">
      <main>
        <h1>Hello Sudo Admin!</h1>
        <div class="menu">
          <div>
            <button class="btn" onclick="window.location.href='/page1'">
              Volunteers
            </button>
          </div>
          <hr />
          <div>
            <h2>Events</h2>
            <button class="btn" onclick="window.location.href='/page1'">
              Events Statistics
            </button>
            <button class="btn" onclick="window.location.href='/page1'">
              Event Calendar
            </button>
          </div>
          <hr />
          <div>
            <button class="btn" onclick="window.location.href='/page1'">
              Edit User
            </button>
          </div>
        </div>
      </main>
    </div>

    <footer>
      <p>&copy; 2024 Turtle Shelter Project. All rights reserved.</p>
    </footer>
  </body>
</html>
