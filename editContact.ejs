<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Volunteer</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <style>
      body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
      }

      /* Transparent Navigation Bar */
      .nav-bar {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: black;
        color: white;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 10px 20px;
        height: 50px;
      }

      .nav-bar a {
        color: white;
        text-decoration: none;
        font-size: 14px;
        margin-left: 20px;
        font-weight: bold;
        text-transform: uppercase;
        transition: color 0.3s ease;
      }

      .nav-bar a:hover {
        color: lightgreen;
      }

      /* Form Styling */
      .form-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .form-container label {
        font-weight: bold;
        margin-top: 10px;
      }

      .form-container .btn {
        background-color: lightgreen;
        color: black;
        border: none;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
        width: 100%;
      }

      .form-container .btn:hover {
        background-color: #89e589;
        transform: scale(1.05);
      }

      .form-container .cancel-btn {
        background-color: black;
        color: white;
      }

      .form-container .cancel-btn:hover {
        background-color: #333;
      }

      .form-container .center-btn {
        display: flex;
        justify-content: center;
        margin-top: 20px;
      }

      /* Footer */
      footer {
        background-color: #343a40;
        color: white;
      }

      footer a {
        color: lightgray;
        text-decoration: none;
      }

      footer a:hover {
        color: white;
      }
    </style>
  </head>
  <body>
    <!-- Transparent Navigation Bar -->
    <div class="nav-bar">
      <a href="/">Home</a>
      <a href="/viewvolunteers">Volunteers</a>
    </div>

    <!-- Page Title -->
    <h1 class="text-center mb-4">Edit Contact</h1>

    <!-- Form Section -->
    <div class="container form-container">
      <form action="/editContact/<%= contact.EventContactID %>" method="POST">
        <div class="mb-3">
          <label for="ContactFirstName">First Name:</label>
          <input type="text" class="form-control" id="ContactFirstName" name="ContactFirstName" value="<%= contact.ContactFirstName %>" required />
        </div>
        <div class="mb-3">
          <label for="ContactLastName">Last Name:</label>
          <input type="text" class="form-control" id="ContactLastName" name="ContactLastName" value="<%= contact.ContactLastName %>" required />
        </div>
        <div class="mb-3">
          <label for="ContactEmail">Email:</label>
          <input type="email" class="form-control" id="ContactEmail" name="ContactEmail" value="<%= contact.ContactEmail %>" required />
        </div>
        <div class="mb-3">
          <label for="ContactPhone">Phone:</label>
          <input type="text" class="form-control" id="ContactPhone" name="ContactPhone" value="<%= contact.ContactPhone %>" required />
        </div>
        <div class="mb-3">
          <label for="GroupName">Group Name:</label>
          <input type="text" class="form-control" id="GroupName" name="GroupName" value="<%= contact.GroupName %>" required />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn center-btn">Save</button>
      </form>

      <!-- Back to contacts button -->
      <div class="text-right" style="padding: 10px">
        <a href="/manageContacts" class="btn cancel-btn">Cancel</a>
      </div>
    </div>

  </body>
</html>
